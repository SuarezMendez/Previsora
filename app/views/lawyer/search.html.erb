<script>
  $(document).ready(function($) {
      $(".clickable-row").click(function() {
          window.location = $(this).data("href");
      });
  });
</script>

<%= search_form_for @search, url: lawyer_search_url do |f| %>
  <%= f.select :p_type_eq, options_for_select([["Prejudicial", 1], ["Judicial", 2], ["Fiscal", 3], ["Administrativo", 4], ["Tutela", 5]]), {prompt: "SELECCIONE"}, {} %>
  <%= f.text_field :correspondency_radicate_cont, placeholder: "Radicado" %>
  <%= f.text_field :case_id_bap_cont, placeholder: "BAP" %>
  <%= f.text_field :case_id_sise_cont, placeholder: "SISE" %>
  <%= f.collection_select(:city_case_id_eq, CityCase.all, :id, :name, {:prompt => 'SELECCIONE'}, {}) %>
  <%= f.submit "Buscar" %>
<% end %>

<%= will_paginate @processes %>
  <div class="container-fluid p-30">
    <table class="table table-responsive-sm table-hover">
      <thead class="darkgreen">
        <tr>
          <th class="center"><%= sort_link @search, :p_type, "Proceso" %></th>
          <th class="center"><%= sort_link @search, :correspondency_radicate, "N° Correspondencia" %></th>
          <th class="center"><%= sort_link @search, :case_id_bap, "N° Bizagi, Acces, PA" %></th>
          <th class="center"><%= sort_link @search, :case_id_sise, "N° SISE" %></th>
          <th class="center"><%= sort_link @search, :user_id, "Abogado" %></th>
          <th class="center"><%= sort_link @search, :city_case_id, "Ciudad" %></th>
        </tr>
      </thead>

    <tbody>
      <% if @processes == [] %>
        <tr class='clickable-row' data-href='#'>
          <td>0</td>
          <td>No</td>
          <td>hay</td>
          <td>resultados</td>
          <td>disponibles</td>
          <td></td>
        </tr>
      <% else %>
      <% @processes.each do |p| %>
        <tr class='clickable-row' data-href='#'>
          <td class="center"><%= p.get_type_process %></td>
          <td class="center"><%= p.correspondency_radicate %></td>
          <td class="center"><%= p.case_id_bap %></td>
          <td class="center"><%= p.case_id_sise %></td>
          <td class="center"><%= User.find(p.user_id).name %></td>
          <td class="center">Ciudad</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

