<!DOCTYPE html>
<html>
  <head>
    <title>Registro Único GPJ</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class="row p-30 ">
      <div class="col-sm-offset-1 col-sm-10 shadow p-0">

        <div class="fw" style="height:150px; overflow:hidden">
          <%= image_tag("bannerprevisora.jpg", width:"100%", height:"150px", style:"position:absolute; z-index:-1") %>
          <ul class="right p-15">
            <% if user_signed_in? %>
              <%= link_to "INICIO", index_home_path, class:"link-inverse" %>
              <%= link_to current_user.name, edit_user_registration_path, class:"link-inverse" %>
              <%= link_to "CERRAR SESIÓN", destroy_user_session_path, method: :delete, class:"link-inverse"  %>
            <% else %>
              <!--%= link_to "Registrarse", new_user_registration_path, class:"link-inverse"  %-->
              <!--%= link_to "Iniciar Sesión", new_user_session_path, class:"link-inverse"  %-->
            <% end %>
          </ul>
        </div>

        <% if notice %>
          <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong><%= notice %></strong>
          </div>
        <% end %>

        <% if alert %>
          <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong><%= alert %></strong>
          </div>
        <% end %>

        <%= yield %>

      </div>
    </div>

  </body>
</html>
