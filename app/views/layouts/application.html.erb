<!DOCTYPE html>
<html>
  <head>
    <title>Previsora</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <nav id="navbar-menu" class="navbar navbar-default navbar-static-top">
      <div class="navbar-header">
        <!--%= link_to image_tag("LogoEntidad.png", alt: "BIOENERGY"), index_path, class:"navbar-brand" %-->
      </div>
      <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            Logged in as <strong><%= current_user.email %></strong>.
            <%= link_to 'Edit profile', edit_user_registration_path, class:"link" %> |
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"link"  %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class:"link"  %> |
            <%= link_to "Login", new_user_session_path, class:"link"  %>
          <% end %>
      </ul>
    </nav>
    
    <%= yield %>

  </body>
</html>
