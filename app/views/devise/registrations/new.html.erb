<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
    <div style="margin-top: 90px">

      <h2 class="white center">Nuevo usuario</h2>


        <%= form_for(@user, as: @user_name, url: registration_path(@user)) do |f| %>

          <div class="">
          <%= f.label "Documento", class:"form-label" %><br />
          <%= f.text_field :document, autofocus: true, class:"form-control" %>
          </div>
          <br>
          <div class="">
            <%= f.label "Nombre", class:"form-label" %><br />
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
          <br>
          <div class="">
            <%= f.label "Rol", class:"form-label" %>
            <div class="styled-select m-5">
              <%= f.select :role, options_for_select([["ABOGADO INTERNO", 1], ["COORDINADOR", 2], ["ADMINISTRADOR", 3]]), {}, {} %>
            </div>
          </div>
          <br>
          <div class="">
            <%= f.label "Contraseña", class:"form-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>
          <br>
          <div class="field">
            <%= f.label "Confirmación", class:"form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Regitrar", class:"btn btn-default floatRight" %>
          </div>

        <% end %>


    </div>
  </div>
</div>
